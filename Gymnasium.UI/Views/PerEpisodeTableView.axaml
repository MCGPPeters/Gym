<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Gymnasium.UI.Views.PerEpisodeTableView">
    <DataGrid Name="EpisodeTable" AutoGenerateColumns="False" CanUserSortColumns="True" Height="200">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Episode" Binding="{Binding Path=Episode}" Width="*"/>
            <DataGridTextColumn Header="Reward" Binding="{Binding Path=Reward}" Width="*"/>
            <DataGridTextColumn Header="Length" Binding="{Binding Path=Length}" Width="*"/>
            <DataGridTextColumn Header="Loss" Binding="{Binding Path=Loss}" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
